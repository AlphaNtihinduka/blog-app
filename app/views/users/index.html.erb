<h1>Listing all the Users <h1>

<div class="body">
    <% @users.each do |user| %>
        <div class="user_wrapper">
         <%= link_to user do %>
            <div class="user_info">
            <div class="img_container">
            <% if user.photo.nil? %>
            <%= image_tag "https://bit.ly/3WU8Zoi", class:"user_image"%>
          <% else %>
          <%= image_tag user.photo, class:"user_image" %>
          <% end %>
                
            </div>

            <div class="user_post">
                <div class="user_name">
                    Username: <%= user.name %>
                </div>
                <div class="post_count">
                Number of posts: <%= user.posts_counter %>
                </div>
            </div>
            </div>
            <% end %>
        </div>
    <% end %>

</div>