<h1>All comments for the post</h1>

<div class="wrapper">
    <span>post <%= @post.id %> by: </span>
    <span>post <%= @user.name %></span>
    <p><%= @post.title %></p>
    <div>
        <span>Comments counter: <%= @post.comments_counter %></span>
        <span>Likes_counter: <%= @post.likes_counter %></span>
    </div>
    
</div>
<% @comments.each do |comment| %>
    <%= comment.text %>
<% end %>